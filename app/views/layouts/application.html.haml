!!!
%html
	%head
		%meta{:content => "width=device-width, initial-scale=1.0", :name => "viewport"}
			%title
				La Luli
			= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track' => true
			= javascript_include_tag 'application', 'data-turbolinks-track' => true
			= csrf_meta_tags
			= yield(:head)

	%body{:class => "#{controller_name} #{action_name}"}
		.navigation
			.vcenter
				= link_to('Home', root_path)
				%a.toggle-about(href='#')
					About
				= link_to('Styling', stylings_path)
				= link_to('Interior Design', interiors_path)
				= link_to('Collections', collections_path)
				%a
					Music&Video
			%a.toggle-nav
				= image_tag('close.png')
		.about
			.col-md-6
			.col-md-6
				.row
					%a
						Facebook
					%a
						Instagram
					%a
						Youtube
					%a
						hello@laluli.com
		.menu
			.col-md-1
				= link_to(root_path, class: 'logo') do
					= image_tag('logo.png')
			.col-md-10
			.col-md-1
				%a.toggle-nav
					= image_tag('toggle-menu.png')
		.container
			.row.content#primary-content
				= yield
