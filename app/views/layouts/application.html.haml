!!!
%html
	%head
		%meta{:content => "width=device-width, initial-scale=1.0", :name => "viewport"}
			%title
				La Luli
			%meta{ :name => "description", :content => 'La Luli is a multi artist from Argentina living in NYC' }
			%meta{ :property => 'og:title', :content => 'La Luli' }
			%meta{ :property => 'og:site_name', :content => 'La luli' }
			%meta{ :property => 'og:url', :content => 'http://www.laluli.net' }
			%meta{ :property => 'og:description', :content => 'La Luli is a multi artist from Argentina living in NYC' }
			%meta{ :property => 'og:image', :content => 'http://www.laluli.net/public/fb.jpg' }
			= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track' => true
			= javascript_include_tag 'application', 'data-turbolinks-track' => true
			= csrf_meta_tags
			= yield(:head)

	%body{:class => "#{controller_name} #{action_name}", :id => "#{controller_name}"}
		.fixed-bg
		.navigation
			.vcenter
				= link_to(root_path) do
					= image_tag('menu_home.png')
				= link_to(about_index_path) do
					= image_tag('menu_about.png')
				= link_to(stylings_path) do
					= image_tag('menu_styling.png')
				= link_to(interiors_path) do
					= image_tag('menu_interior.png')
				= link_to(collections_path) do
					= image_tag('menu_collections.png')
				= link_to(releases_path) do
					= image_tag('menu_music.png')
			.social
				= link_to('https://www.facebook.com/LaLuli.and.the.explosivo.Paz', target: "_blank", class: 'fbicon') do
					= icon('facebook-square')
				= link_to('https://www.youtube.com/user/lalulimusic', target: "_blank", class: 'yticon') do
					= icon('youtube')
				= link_to('https://soundcloud.com/lalulimusic', target: "_blank", class: 'scicon') do
					= icon('soundcloud')
				= link_to('https://www.instagram.com/lulianak/', target: "_blank", class: 'inicon') do
					= icon('instagram')
			#jp_container_menu.jp-video
				#jquery_jplayer_menu
		= yield
	
:javascript
	$('body').jpreLoader({
		loaderVPos: '50%',
		autoClose: true,
		showPercentage: false,
	}, function() {
		$('#primary-content').addClass('loaded');
		$('.sc-player.playing a.sc-pause').click();
	});