!!!
%html
	%head
		%meta{:content => "width=device-width, initial-scale=1.0", :name => "viewport"}
			%title
				La Luli
			= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track' => true
			= javascript_include_tag 'application', 'data-turbolinks-track' => true
			= csrf_meta_tags
			= yield(:head)

	%body{:class => "#{controller_name} #{action_name}"}
		.navigation
			.vcenter
				= link_to(root_path) do
					= image_tag('menu_home.png')
				= link_to(about_index_path) do
					= image_tag('menu_about.png')
				= link_to(stylings_path) do
					= image_tag('menu_styling.png')
				= link_to(interiors_path) do
					= image_tag('menu_interior.png')
				= link_to(collections_path) do
					= image_tag('menu_collections.png')
				= link_to(root_path) do
					= image_tag('menu_music.png')
			%a.toggle-nav
				= image_tag('close.png')
			#jp_container_menu.jp-video
				#jquery_jplayer_menu
		.menu
			.col-md-11
			.col-md-1
				%a.toggle-nav
					= image_tag('toggle-menu.png')
		= yield
		
		:javascript
			$("#jquery_jplayer_menu").jPlayer({
				ready: function () {
					$(this).jPlayer("setMedia", {
						m4v: "assets/menu.mp4",
						webmv: "assets/menu.webm",
						poster: "assets/menu.jpg"
					});
				},
				swfPath: "/js",
				supplied: "webmv, mp4",
				loop: true
			});
