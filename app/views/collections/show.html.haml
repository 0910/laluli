.row
	.title.col-md-12
		= link_to('Collections.', collections_path)
		%p #{@collection.name}
	.col-md-12.thumbs
		.row#bx-pager
			- if @collection.images.empty?
				= link_to "#{image.file.url(:medium)}", class: 'col-md-3', data:{ toggle:'lightbox', gallery:'multiimages' } do
					.item{:style => "background-image: url(image-not-available.jpg)"}
			- else
				- @collection.images.each do |image|
					= link_to "#{image.file.url(:medium)}", class: 'col-md-3', data:{ title:@collection.name, toggle:'lightbox', gallery:'multiimages' } do
						.item{:style => "background-image: url(#{image.file.url(:medium)})"}
							.over
								%p
									+

							
:javascript
	$('.bxslider').bxSlider({
		pagerCustom: '#bx-pager'
	});