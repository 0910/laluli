.row.title
	.inside
		= link_to('Interiors.', interiors_path)
		%p #{@interior.name}
		= link_to("&#8592".html_safe + ' Back', interiors_path, class: 'pull-right')
.row
	.col-md-12.thumbs
		.row#bx-pager
			- if @interior.images.empty?
				= link_to "#{image.file.url(:medium)}", class: 'col-md-3', data:{ toggle:'lightbox', gallery:'multiimages' } do
					.item{:style => "background-image: url(image-not-available.jpg)"}
			- else
				- @interior.images.each do |image|
					= link_to "#{image.file.url(:large)}", class: 'col-md-3', data:{ title:@interior.name, toggle:'lightbox', gallery:'multiimages' } do
						.item{:style => "background-image: url(#{image.file.url(:medium)})"}
							.over
								%p
									ZOOM IT

							
:javascript
	$('.bxslider').bxSlider({
		pagerCustom: '#bx-pager'
	});