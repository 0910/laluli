.container
	.row.content#primary-content
		.row.title
			.inside
				= link_to('Styling.', stylings_path)
				%p #{@styling.name}
				- if @styling.category_id = 1
					= link_to("&#8592".html_safe + ' Back', lookbooks_stylings_path, class: 'pull-right')
				- else
					= link_to("&#8592".html_safe + ' Back', stylings_path, class: 'pull-right')
		.row
			.thumbs
				- if @styling.images.empty?
					= link_to "#{image.file.url(:medium)}", class: 'instagrid col-xs-4 col-sm-4 col-md-3 swipebox', :title => "#{image.year}" do
						.item{:style => "background-image: url(image-not-available.jpg)"}
				- else
					- @styling.images.each do |image|
						= link_to "#{image.file.url(:large)}", class: 'instagrid col-xs-4 col-sm-4 col-md-3 swipebox', :title => "#{image.year}" do
							.item{:style => "background-image: url(#{image.file.url(:medium)})"}
								.over
									%p
										ZOOM IT
